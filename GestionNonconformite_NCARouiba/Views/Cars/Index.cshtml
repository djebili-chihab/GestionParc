@model IEnumerable<GestionNonconformite_NCARouiba.Models.Entities.Car>

@{
    ViewData["Title"] = "Index";
}

    <div class="app-main__inner">
        <nav class="" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="active breadcrumb-item" aria-current="page">Les vihecules de park</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-lg-12 btn-group-top-menu">
                <a asp-action="create" class="btn mr-2 mb-2 btn-info">
                    Ajouter une nouvelle vihecule
                </a>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-lg-4">
                <div class="input-group mb-3">
                    <input type="text" class="form-control border-right-0" placeholder="Rechercher ..." id="myInput" />
                    <div class="input-group-append">
                        <span class="input-group-text bg-white border-left-0"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="main-card mb-3 card">

                    <div class="card-body">

                        <table class="mb-0 table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Conducteur)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Matricule)
                                    </th>
                                    <th>
                                        Date d'ssurance
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateControlTech)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateScannaire)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.marque)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Categorie)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Kilometrage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Carburant)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Photo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Statue)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EnMission)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NumChassis)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Couleur)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.model)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Conducteur.Nom)  @Html.DisplayFor(modelItem => item.Conducteur.Prenom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricule)
                                    </td>
                                    @if (item.DateAssurance <= DateTime.Today)
                                    {
                                        <td style="background-color:#FF0000">
                                            @Html.DisplayFor(modelItem => item.DateAssurance)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>

                                            @Html.DisplayFor(modelItem => item.DateAssurance)
                                        </td>
                                    }
                                    @if (item.DateControlTech <= DateTime.Today)
                                    {
                                        <td style="background-color:#FF0000">
                                            @Html.DisplayFor(modelItem => item.DateControlTech)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>

                                            @Html.DisplayFor(modelItem => item.DateControlTech)
                                        </td>
                                    }
                                    @if (item.DateScannaire <= DateTime.Today)
                                    {
                                        <td style="background-color:#FF0000">
                                            @Html.DisplayFor(modelItem => item.DateScannaire)
                                        </td>
                                    }
                                    else
                                    {
                                        <td>

                                            @Html.DisplayFor(modelItem => item.DateScannaire)
                                        </td>
                                    }



                                  
                                    <td>
                                        @Html.DisplayFor(modelItem => item.marque)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categorie)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Kilometrage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Carburant)
                                    </td>
                                    <td>
                                        <img width="35" class="rounded-circle" src="~/images/@item.Photo" alt="">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Statue)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EnMission)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumChassis)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Couleur)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.model)
                                    </td>

                                    <td class="btn-action">
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="nav-link-icon fa fa-check icon-action-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="nav-link-icon fa fa-eye icon-action-view"> </i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="nav-link-icon  fa fa-trash icon-action-delete"> </i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

    </script>

