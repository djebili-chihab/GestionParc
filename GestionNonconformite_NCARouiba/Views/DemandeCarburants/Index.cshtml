@model IEnumerable<GestionNonconformite_NCARouiba.Models.Entities.DemandeCarburant>

@{
    ViewData["Title"] = "Index";
}

<div class="app-main__inner">
    <nav class="" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="active breadcrumb-item" aria-current="page">Les demandes de carburants</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-lg-12 btn-group-top-menu">
            <a asp-action="create" class="btn mr-2 mb-2 btn-info">
                Ajouter une nouvelle demande
            </a>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-lg-4">
            <div class="input-group mb-3">
                <input type="text" class="form-control border-right-0" placeholder="Rechercher ..." id="myInput" />
                <div class="input-group-append">
                    <span class="input-group-text bg-white border-left-0"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12">
            <div class="main-card mb-3 card">

                <div class="card-body">

                    <table class="mb-0 table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Conducteur)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.car)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NouveauKM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PreuveKM)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Commentaire)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Conducteur.Nom) @Html.DisplayFor(modelItem => item.Conducteur.Prenom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.car.Matricule)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NouveauKM)
                                </td>
                                <td>
                                    <img width="35" class="rounded-circle" src="~/images/@item.PreuveKM" alt="">
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Commentaire)
                                </td>
                                <td class="btn-action">
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="nav-link-icon fa fa-check icon-action-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="nav-link-icon fa fa-eye icon-action-view"> </i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="nav-link-icon  fa fa-trash icon-action-delete"> </i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>
